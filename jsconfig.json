{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": "./",

    "paths": {
      "@components/*": ["src/common/components/*"],
      "@context/*": ["src/common/context/*"],
      "@modules/*": ["src/modules/*"],
      "@hooks/*": ["src/common/hooks/*"],
      "@screens/*": ["src/screens/*"],
      "@images/*": ["src/images/*"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
